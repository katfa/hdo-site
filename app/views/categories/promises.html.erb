<% @promises_by_parties.each do |parties, promises| %>
  <% if parties.size == 1
     party = parties.first %>
    <div data-party-slug="<%= party.slug %>">

      <% if @promises_by_parties.size > 1 %>
        <h3 class="<%= party.slug %>-title"><%= link_to party.name, party_path(party) %></h3>
      <% end %>

        <% promises.each do |p| %>
          <ul class="breadcrumb">
            <li><%= p.body %></li>
          </ul>
        <% end %>

    </div>
  <% elsif parties.all? { |e| e.in_government? } %>
    <div data-party-slug="<%= parties.map(&:slug).join(',') %>">
      <h3>Soria Moria II</h3>
      <ul>
        <% promises.each do |p| %>
          <li><%= p.body %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>